    <style>
        * {
            margin: 0;
            padding: 0;
            border: 0;
            font-size: 100%;
        }

        .btn__logout {
            background-image: -webkit-linear-gradient(169deg, #5560ff 17%, #aa52a1 63%, #ff4343 100%);
            padding: 10px 49px;
            font-weight: 600;
            border-radius: 25px;
            display: inline-block;
            transition: all 0.3s ease;
        }

            .btn__logout:hover {
                box-shadow: 0px 10px 15px 0px rgba(59, 55, 188, 0.5);
            }

            .btn__logout:focus,
            .btn__logout:active {
                border: none;
                outline: none;
            }

        .mt-50 {
            margin-top: 50px;
        }
    </style>

