@{
    ViewData["Title"] = "PaymentSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = TempData["PaymentSuccessMessage"] ?? "Thanh toán thành công!";
    var redirectUrl = Url.Action("History", "User");
    var seconds = 5;
}
<meta http-equiv="refresh" content="@seconds;url=@redirectUrl" />

<section class="main-page-header speaker-banner bg_img" data-background="/imgs/img/banner/banner07.jpg"
         style="background-image: url('/imgs/img/banner/banner07.jpg');">
    <div class="container">
        <div class="speaker-banner-content">
            <h2 class="title">@message</h2>
            <ul class="breadcrumb">
                <li>
                    <p class="countdown">Đang chuyển hướng trong <span>@seconds</span> giây...</p>
                </li>
                <li>
                    <p><a href="@redirectUrl" class="btn btn-primary">Quay lại trang lịch sử</a></p>
                </li>
            </ul>
        </div>
    </div>
</section>
<script>
    // Giảm đếm ngược hiển thị
    (function() {
        var sec = @seconds;
        var el = document.querySelector('.countdown');
        var timer = setInterval(function() {
            sec--;
            if (sec <= 0) {
                clearInterval(timer);
            } else {
                el.textContent = sec;
            }
        }, 1000);
    })();
</script>