@page
@model school_major_project.Areas.Identity.Pages.Account.AuthenticationModel


<style>
    .select-option {
        background-color: #eee;
        border: 1px black solid;
        padding: 12px 15px;
        margin: 8px 0;
        width: 100%;
    }
</style>
<div class="container" id="container" style="min-height:720px;background-image: url(/imgs/img/account/account-bg.jpg);}">
    <div class="form-container sign-up-container">
        <form method="post" asp-page-handler="Register">
            <h1>Create Account</h1>
            <div class="social-container">
                <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <span>or use your email for registration</span>

            <input asp-for="Input.FullName" placeholder="Full Name" />
            <input asp-for="Input.Email" placeholder="Email" />
            <input asp-for="Input.Password" placeholder="Password" />
            <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" />

            <input asp-for="Input.PhoneNumber" placeholder="Phone Number" />

            <select asp-for="Input.Roles" asp-items="Model.Input.RoleList" class="select-option">
                <option value="">Select Role (Optional)</option>
            </select>

            <button type="submit" class="mt-16">Sign Up</button>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>

    <div class="form-container sign-in-container">
        <form method="post" asp-page-handler="Login">
            <h1>Sign in</h1>
            <div class="social-container">
                <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <span>or use your account</span>
            <input asp-for="Input.Email" placeholder="Email" />
            <input asp-for="Input.Password" placeholder="Password" />
            <div class="form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
            </div>
            <a href="#">Forgot your password?</a>
            <button type="submit">Sign In</button>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>

    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <button class="ghost" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hello, Friend!</h1>
                <p>Enter your personal details and start journey with us</p>
                <button class="ghost" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        // Check if there's a validation error in login or register form
        const loginErrors = document.querySelector('.sign-in-container .text-danger');
        const registerErrors = document.querySelector('.sign-up-container .text-danger');

        const urlParams = new URLSearchParams(window.location.search);
        const openRegister = urlParams.get('register') === 'true';
        const openLogin = urlParams.get('login') === 'true';
        signUpButton.addEventListener('click', () => {
            container.classList.add("right-panel-active");
        });

        signInButton.addEventListener('click', () => {
            container.classList.remove("right-panel-active");
        });
        if (openRegister) {
            container.classList.add("right-panel-active");
        } else if (openLogin) {
            container.classList.remove("right-panel-active");
        } else if (registerErrors && registerErrors.children.length > 0) {
            container.classList.add("right-panel-active");
        } else if (loginErrors && loginErrors.children.length > 0) {
            container.classList.remove("right-panel-active");
        }
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}