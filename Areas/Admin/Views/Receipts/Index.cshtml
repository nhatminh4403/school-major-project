                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>HỌ TÊN</th>
                                    <th>PHIM</th>
                                    <th>LỊCH CHIẾU</th>
                                    <th>NGÀY ĐẶT</th>
                                    <th>RẠP</th>
                                    <th>PHÒNG</th>
                                    <th>GIÁ</th>
                                </tr>
                            </thead>


