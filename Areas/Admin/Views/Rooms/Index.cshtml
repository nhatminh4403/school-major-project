@model IEnumerable<school_major_project.Models.Room>

@{
    ViewData["Title"] = "Quản lý phòng chiếu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section>
    <main class="main">
        <div class="container-fluid">
            <div class="row">
                <!-- main title -->
                <div class="col-12">
                    <div class="main__title">
                        <h2>@ViewData["Title"]</h2>
                        <a asp-action="Create" asp-controller="Rooms" asp-area="Admin" class="main__title-link">Thêm mới</a>
                    </div>
                </div>
                <!-- end main title -->
                <!-- users -->

                <div class="col-12">
                    <div class="main__table-wrap">
                        <table class="main__table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>PHÒNG CHIẾU</th>
                                    <th style="padding: 0 15px 15px 0;">
                                        <a asp-action="Index" class="thead-sort" asp-route-sortOrder="id_asc">RẠP ↑</a> |
                                        <a asp-action="Index" class="thead-sort" asp-route-sortOrder="id_desc">RẠP ↓</a>
                                    </th>
                                    <th>ĐỊA CHỈ</th>
                                    <th>SỐ ĐIỆN THOẠI</th>
                                    <th>MÔ TẢ</th>
                                    <th>HÀNH ĐỘNG</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var room in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="main__table-text">@room.Id</div>
                                        </td>
                                        <td>
                                            <div class="main__table-text">@room.Name</div>
                                        </td>
                                        <td>
                                            <div class="main__table-text">@room.Cinema.CinemaName</div>
                                        </td>
                                        <td>
                                            <div class="main__table-text">@room.Cinema.CinemaAddress</div>
                                        </td>
                                        <td>
                                            <div class="main__table-text">@room.Cinema.CinemaPhoneNumber</div>
                                        </td>
                                        <td>
                                            <div class="main__table-text">@room.Description</div>
                                        </td>
                                        <td>
                                            <div class="main__table-btns">
                                                <a asp-action="Edit" asp-controller="Rooms" asp-area="Admin" asp-route-id="@room.Id"
                                                   class="main__table-btn main__table-btn--edit">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                        <path d="M5,18H9.24a1,1,0,0,0,.71-.29l6.92-6.93h0L19.71,8a1,1,0,0,0,0-1.42L15.47,2.29a1,1,0,0,0-1.42,0L11.23,5.12h0L4.29,12.05a1,1,0,0,0-.29.71V17A1,1,0,0,0,5,18ZM14.76,4.41l2.83,2.83L16.17,8.66,13.34,5.83ZM6,13.17l5.93-5.93,2.83,2.83L8.83,16H6ZM21,20H3a1,1,0,0,0,0,2H21a1,1,0,0,0,0-2Z" />
                                                    </svg>
                                                </a>
                                                <a href="#modal-delete" onclick="setDeleteItem(@room.Id)"
                                                   class="main__table-btn main__table-btn--delete open-modal">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                                        <path d="M20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Z" />
                                                    </svg>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end users -->
            </div>
        </div>
    </main>
    <!-- end main content -->
    <!-- modal delete -->
    <div id="modal-delete" class="zoom-anim-dialog mfp-hide modal">
        <h6 class="modal__title">Thông báo</h6>
        <p class="modal__text">Bạn có muốn xoá dữ liệu này không? Không thể xoá dữ liệu đã có liên kết.</p>
        <div class="modal__btns">
            <button class="modal__btn modal__btn--apply" type="button"
                    onclick="deleteItem('/admin/phong-chieu/xoa/' +  item_id,'/admin/phong-chieu')">
                Xoá
            </button>
            <button class="modal__btn modal__btn--dismiss" type="button">Đóng</button>
        </div>
    </div>
</section>